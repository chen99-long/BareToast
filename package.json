  "devDependencies": {
    "@types/jest": "^29.5.0",
    "@typescript-eslint/eslint-plugin": "^5.59.0",
    "@typescript-eslint/parser": "^5.59.0",
    "eslint": "^8.38.0",
    "jest": "^29.5.0",
    "prettier": "^2.8.7",
    "rollup": "^2.79.1",
    "rollup-plugin-typescript2": "^0.31.2",
    "ts-jest": "^29.1.0",
    "typescript": "^5.0.4"
  }
